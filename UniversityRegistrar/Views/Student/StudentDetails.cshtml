@{
}

<h1>Student Details</h1>
    <div class="row">
        <div class="col-sm-4">
            <h3>Name: @Model["student"].Name</h3>
        </div>
        <div class="col-sm-4">
            <p>Date Of Enrollment: @Model["student"].DOE</p>
        </div>
        <div class="col-sm-4">
            @foreach (var course in Model["courses"])
            {
                <p>@course.Name</p>
            }
        </div>
    </div>
    <form action="/students/@Model["student"].Id/add-course" method="post">
        <div class="form-group">
            <label for="course">Select Course</label>
            <select name="course">
                @foreach(var course in Model["student"].GetAllCourses())
                {
                    <option value="@course.Id">@course.Name</option>
                }
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Add Course</button>
      </form>