<div class="row">
    <div class="col-sm-12">
        <form action="/students/@Model.Id/update" method="post">
            <div class="form-group">
                <label for="newName">Enter Student Name</label>
                <input type="text" id="newName" name="newName" placeholder="@Model.Name" required />
            </div>
            <div class="form-group">
                <label for="newDOE">Enter Date Of Enrollment</label>
                <input type="date" id="newDOE" name="newDOE" placeholder="@Model.DOE" required />
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </form>
    </div>
</div>